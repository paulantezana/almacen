{% extends 'admin.html.twig' %}
{% block main %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form_create) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form_create.categoria,'Categoría (*):') }}
                        {{ form_widget(form_create.categoria, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form_create.unidadMedida,'U. Medida (*):') }}
                        {{ form_widget(form_create.unidadMedida, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form_create.nombre,'Nombre (*):') }}
                    {{ form_widget(form_create.nombre, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form_create.descripcion,'Descripción:') }}
                    {{ form_widget(form_create.descripcion, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form_create.imagen,'Imagen:') }}
                    {{ form_widget(form_create.imagen, {'attr':{'class':'form-control'}}) }}
                </div>

                <input type="submit" class="btn btn-primary" value="Guardar" />
            {{ form_end(form_create) }}
        </div>
    </div>
{% endblock %}