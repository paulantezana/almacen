{% extends 'admin.html.twig' %}
{% block main %}
    <div class="card">
        <div class="card-body crud">
            <div class="crud-header">
                <a href="{{ path('admin_almacen_categoria_create') }}">
                    <button type="button" class="btn btn-primary">Nuevo</button>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Categoria</th>
                            <th scope="col">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        {% for categoria in categorias %}
                            <tr>
                                <th>{{ categoria.getNombre() }}</th>
                                <td>
                                    <a href="/admin/categoria/update/{{categoria.getId()}}">
                                        <button type="button" class="btn btn-sm btn-primary">Editar</button>
                                    </a>
                                    <a href="/admin/categoria/delete/{{categoria.getId()}}">
                                        <button type="button" class="btn btn-sm btn-danger">Eliminar</button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Anterior</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}