{% extends 'admin.html.twig' %}
{% block main %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form_update) }}
                <div class="form-group">
                    {{ form_label(form_update.nombre,'Nombre (*):') }}
                    {{ form_widget(form_update.nombre, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-check">
                    {{ form_widget(form_update.estado, {'attr':{'class':'form-check-input'}}) }}
                    {{ form_label(form_update.estado,'Estado', {'attr':{'class':'form-check-label'}}) }}
                </div>
                <input type="submit" class="btn btn-primary" value="Guardar" />
            {{ form_end(form_update) }}
        </div>
    </div>
{% endblock %}