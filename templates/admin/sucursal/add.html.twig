{% extends 'admin.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.razon_social,'Razón Social (*):') }}
                    {{ form_widget(form.razon_social, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.tipo_documento,'Tipo Documento (*):') }}
                        {{ form_widget(form.tipo_documento, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.numero_documento,'Documento (*):') }}
                        {{ form_widget(form.numero_documento, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        {{ form_label(form.direccion,'Dirección (*):') }}
                        {{ form_widget(form.direccion, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_label(form.telefono,'Teléfono (*):') }}
                        {{ form_widget(form.telefono, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_label(form.email,'Email:') }}
                        {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.representante,'Representante:') }}
                        {{ form_widget(form.representante, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.logo,'Logo:') }}
                        {{ form_widget(form.logo, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        {{ form_widget(form.estado, {'attr':{'class':'form-control'}}) }}
                        {{ form_label(form.estado,'Estado') }}
                    </div>
                </div>

                <input type="submit" class="btn btn-primary" value="Guardar" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}