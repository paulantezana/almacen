{% extends 'admin.html.twig' %}
{% block main %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form_update) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form_update.nombre,'Nombre (*):') }}
                        {{ form_widget(form_update.nombre, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form_update.prefijo,'Prefijo (*):') }}
                        {{ form_widget(form_update.prefijo, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                
                <input type="submit" class="btn btn-primary" value="Guardar" />
            {{ form_end(form_update) }}
        </div>
    </div>
{% endblock %}