{% extends 'admin/layout.twig' %}
{% block main %}
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">{{ type == 'create' ? 'Nuevo' : 'Editar' }} unidadmedida</h4>
            <p class="card-category">Complete los campos</p>
        </div>
        <div class="card-body">
            <form action="/admin/unidadmedida/{{ type }}" method="POST">
                {% if unidadmedida.id %}
                    <div style="display:none">
                        <label for="id" class="bmd-label-floating">id:</label>
                        <input type="text" value="{{ unidadmedida.id }}" class="form-control" id="id" name="id">
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="nombre" class="bmd-label-floating">Nombre (*):</label>
                    <input type="text" value="{{ unidadmedida.nombre}}" class="form-control" id="nombre" name="nombre">
                </div>
                <div class="form-group">
                    <label for="prefijo" class="bmd-label-floating">Prefijo (*):</label>
                    <input type="text" value="{{ unidadmedida.prefijo}}" class="form-control" id="prefijo" name="prefijo">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" name="estado" type="checkbox" {{ sucursal.estado ? 'checked': '' }}>
                            Estado
                            <span class="form-check-sign">
                            <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="{{ type == 'create' ? 'Guardar' : 'Guardar Cambios' }}" />
            </form>
        </div>
    </div>
{% endblock %}